{{#if addNewAnswer}}
  <p>Answer {{question.author}}'s Question</p>
  <div>
    <form>
      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author"}}
      </div>

      <div class="form-group">
        <label for="content">Content</label>
        {{input value=content id="content"}}
      </div>

      <button class="btn btn-primary" {{action 'saveAnswer'}}>Answer</button>
    </form>
  </div>
{{else}}
  <button class="btn btn-primary" {{action 'answerFormShow'}}>Answer</button>
{{/if}}
